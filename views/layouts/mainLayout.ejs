<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%=title%></title>
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body id="body-pd">
    <header class="header" id="header">
      <div class="header_toggle">
        <i class="bx bx-menu" id="header-toggle"></i>
      </div>
      <div class="d-flex flex-row justify-content-between align-items-center">
        <form action="/cars/" method="get" class="form-search form-inline my-2 my-lg-0 mr-4 d-flex me-5">
          <div class="form-with-icon me-2">
            <i data-feather="search"></i>
            <input class="form-control" type="search" id="searchCar" name="name" placeholder="Search" autocomplete="off" aria-label="Search" />
          </div>
          <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
        </form>
        <div class="d-flex align-items-center">
          <div class="header_img">
            <img src="https://i.imgur.com/hczKIze.jpg" alt="" />
          </div>
          <h6 class="ms-2 m-0 p-0">Handy Reza</h6>
        </div>
      </div>
    </header>
    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
        <div>
          <a href="#" class="nav_logo">
            <i class="bx bx-layer nav_logo-icon"></i>
            <span class="nav_logo-name">BCR Dashboard</span>
          </a>
          <div class="nav_list">
            <a href="/" <% if (title === "Dashboard") { %> class="nav_link active" <%} else{ %> class="nav_link" <%}%>>
              <i class="bx bx-grid-alt nav_icon"></i>
              <span class="nav_name">Dashboard</span>
            </a>
            <a href="/cars" <% if (title === "List Car") { %> class="nav_link active" <%} else{ %> class="nav_link" <%}%>>
              <i class="bx bx-car nav_icon"></i>
              <span class="nav_name">Cars</span>
            </a>
          </div>
        </div>
        <a href="#" class="nav_link">
          <i class="bx bx-log-out nav_icon"></i>
          <span class="nav_name">SignOut</span>
        </a>
      </nav>
    </div>
    <div class="pt-10 height-100 w-100">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <% breadcrumbs.forEach(b => { %>
            <li <%if(b === title){ %> class="breadcrumb-item active" aria-current="page"<%}else{%> class="breadcrumb-item" <%}%>><a href="#"><%= b %></a></li>
          <% }) %>
         
        </ol>
      </nav>
      <div class="container-fluid m-0 p-0">
        <%-body %> 
      </div>
    </div>

    <script src="../assets/js/nav.js"></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
